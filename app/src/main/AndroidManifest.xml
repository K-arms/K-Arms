<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.k_arms">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application


        android:allowBackup="true"
        android:icon="@drawable/main_logo"
        android:label="@string/app_name"


        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".EmailPasswordActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">


        </activity>
        <activity android:name=".ListTasks"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustPan"
            tools:ignore="LockedOrientationActivity">
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name=".MyCamera"
            tools:ignore="LockedOrientationActivity">

        </activity>
        <activity android:name=".MyCameraZat"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">
        </activity>

        <activity android:name=".CustomIntro"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">
        </activity>

        <activity android:name=".CustomInstruction"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">
        </activity>

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <activity android:name=".Zatilnik"
            android:windowSoftInputMode="stateVisible|adjustPan"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">
        </activity>

    </application>

</manifest>