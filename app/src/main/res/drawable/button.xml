<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="3dip" android:color="@color/colorPrimaryDark" />
            <gradient android:angle="180" android:startColor="@color/colorPrimaryDark" android:centerColor="@color/colorPrimaryDark" android:endColor="@color/colorPrimaryDark" />

        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="3dip" android:color="@color/colorPrimaryDark" />
            <gradient android:angle="180" android:startColor="@color/colorPrimaryDark" android:centerColor="@color/primary_darker" android:endColor="@color/colorPrimaryDark" />

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />

            <stroke android:width="2dip" android:color="@color/primary_darker" />
            <gradient android:angle="180" android:startColor="@color/primary_darker" android:endColor="@color/primary_darker" />
        </shape>
    </item>
</selector>